@model IEnumerable<Book>

<table id="list-books" class="table table-striped table-hover table-responsive books col-lg-12">
    <thead class="col-lg-12">
        <tr class="col-lg-12">
            <th class="col-lg-1"><p>Book Id</p></th>
            <th class="col-lg-4"><p>Book Name</p></th>
            <th class="col-lg-4"><p>BookAuthor</p></th>
            <th class="col-lg-3"><p>Delete item</p></th>
        </tr>
    </thead>
    <tbody class="col-lg-12">
        @foreach (Book b in Model)
        {
            <tr id="edit-button" data-content="@b.BookId" class="col-lg-12">
                <td class="col-lg-1"><p>@b.BookId</p></td>
                <td class="col-lg-4"><p> @b.BookName </p></td>
                <td class="col-lg-4"><p>@b.BookAuthor</p></td>
                <td class="col-lg-3"><button data-content="@b.BookId" id="delete-button" class="btn btn-success">Delete</button></td>
            </tr>
        }
    </tbody>
</table>

